<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home', {'_locale': 'fr'}) }}">Français</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home', {'_locale': 'en'}) }}">English</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home', {'_locale': 'es'}) }}">Español</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    {% if app.user %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">{{ 'Logout'|trans }}</a>
                        </li>
                    {% else %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_login') }}">{{ 'Login'|trans }}</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_register') }}">{{ 'Register'|trans }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </nav>

        <div id="cookieBanner" class="alert alert-info text-center mb-0" style="display: none;">
            {{ 'This website uses cookies'|trans }}
            <button id="acceptAllCookies" class="btn btn-sm btn-primary mx-2">{{ 'Accept all cookies'|trans }}</button>
            <button id="acceptEssentialCookies" class="btn btn-sm btn-secondary">{{ 'Accept only essential cookies'|trans }}</button>
        </div>

        <div class="container mt-4">
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        {{ message }}
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                {% endfor %}
            {% endfor %}

            {% block body %}{% endblock %}
        </div>
        
        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    if (!localStorage.getItem('cookieConsent')) {
                        document.getElementById('cookieBanner').style.display = 'block';
                    }

                    document.getElementById('acceptAllCookies').addEventListener('click', function() {
                        localStorage.setItem('cookieConsent', 'all');
                        document.getElementById('cookieBanner').style.display = 'none';
                    });

                    document.getElementById('acceptEssentialCookies').addEventListener('click', function() {
                        localStorage.setItem('cookieConsent', 'essential');
                        document.getElementById('cookieBanner').style.display = 'none';
                    });
                });
            </script>
        {% endblock %}
    </body>
</html>
